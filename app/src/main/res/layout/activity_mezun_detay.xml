<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MezunDetay">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:clickable="false"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:contentInsetEnd="32dp"
        app:contentInsetStart="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp">

            <ImageView
                android:id="@+id/detayImg"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcCompat="@mipmap/ic_launcher"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="28dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/detayUserNameID"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="26dp" />


    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/detayYearId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="68dp"
        android:text="Mezun Yılı:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/egitimDetayID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Eğitim:"
        app:layout_constraintStart_toStartOf="@+id/detayYearId"
        app:layout_constraintTop_toBottomOf="@+id/detayYearId" />

    <TextView
        android:id="@+id/telefonDetayID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Telefon:"
        app:layout_constraintStart_toStartOf="@+id/egitimDetayID"
        app:layout_constraintTop_toBottomOf="@+id/egitimDetayID" />

    <TextView
        android:id="@+id/detayCompanyID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Şirket:"
        app:layout_constraintStart_toStartOf="@+id/telefonDetayID"
        app:layout_constraintTop_toBottomOf="@+id/telefonDetayID" />

    <TextView
        android:id="@+id/detayCityID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Şehir:"
        app:layout_constraintStart_toStartOf="@+id/detayCompanyID"
        app:layout_constraintTop_toBottomOf="@+id/detayCompanyID" />

    <Button
        android:id="@+id/reachBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="ULAŞ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detayCityID" />

    <TextView
        android:id="@+id/detayYearID2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/detayYearId"
        app:layout_constraintStart_toEndOf="@+id/detayYearId" />

    <TextView
        android:id="@+id/detayEducatıonID2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/detayYearID2"
        app:layout_constraintTop_toBottomOf="@+id/detayYearID2" />

    <TextView
        android:id="@+id/detayPhoneID2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/detayEducatıonID2"
        app:layout_constraintTop_toBottomOf="@+id/detayEducatıonID2" />

    <TextView
        android:id="@+id/detayCompanyID2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/detayPhoneID2"
        app:layout_constraintTop_toBottomOf="@+id/detayPhoneID2" />

    <TextView
        android:id="@+id/detayCityID2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/detayCompanyID2"
        app:layout_constraintTop_toBottomOf="@+id/detayCompanyID2" />

    <Button
        android:id="@+id/anaDonusBtnDetay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="GERİ"
        app:layout_constraintEnd_toEndOf="@+id/reachBtn"
        app:layout_constraintStart_toStartOf="@+id/reachBtn"
        app:layout_constraintTop_toBottomOf="@+id/reachBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>